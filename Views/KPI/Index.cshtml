            <div class="row">
                <div class="col-lg-12">
            <div class="table-responsive" style="overflow-x: auto;
    -webkit-overflow-scrolling: touch;">
                <table class="table table-striped custom-table table-nowrap mb-0">
                    <thead>
                        <!-- First row of headers -->
                        <tr>
                            <th rowspan="2" class="text-center">Employee</th> <!-- Single header spanning 2 rows -->
                            <th rowspan="2">Working Days</th> <!-- Single header spanning 2 rows -->
                            <th rowspan="2">Titles</th> <!-- Single header spanning 2 rows -->
                            <th style="border:1px solid red" colspan="2" class="text-center">Service Promises</th> <!-- Header spanning 2 columns -->
                            <th style="border:1px solid red" colspan="2" class="text-center">Appearance</th> <!-- Header spanning 2 columns -->
                            <th style="border:1px solid red" colspan="2" class="text-center">General Performance & Behavior</th> <!-- Header spanning 2 columns -->
                            <th style="border:1px solid orange" colspan="2" class="text-center">Attendance</th> <!-- Header spanning 2 columns -->
                            <th style="border:1px solid green" colspan="2" class="text-center">Total</th> <!-- Header spanning 2 columns -->
                            <th colspan="1" class="text-center">Rate</th> <!-- Header spanning 2 columns -->
                            <th colspan="1" class="text-center">Shift</th> <!-- Header spanning 2 columns -->
                        </tr>
                        <!-- Second row of headers -->
                        <tr>
                            <th style="border:1px solid red">Points (5)</th>
                            <th style="border:1px solid red">20%</th>
                            <th style="border:1px solid red">Points (10)</th>
                            <th style="border:1px solid red">20%</th>
                            <th style="border:1px solid red">Points (19)</th>
                            <th style="border:1px solid red">50%</th>
                            <th style="border:1px solid orange">Points (1)</th>
                            <th style="border:1px solid orange">10%</th>
                            <th style="border:1px solid green">Points (35)</th>
                            <th style="border:1px solid green">100%</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var kpi in Model)
                        {
                            <tr>
                                <td>
                                    <h2 class="table-avatar">
                                        <a href="profile.html">@kpi.EmployeeName</a>
                                    </h2>
                                </td>
                                <td>@kpi.WorkingDay</td>
                                <td>@kpi.Title</td>
                                <td style="border:1px solid red">@kpi.ServicePoint</td>
                                <td style="border:1px solid red">@kpi.Service</td>
                                <td style="border:1px solid red">@kpi.AppearancePoint</td>
                                <td style="border:1px solid red">@kpi.Appearance</td>
                                <td style="border:1px solid red">@kpi.GeneralPoint</td>
                                <td style="border:1px solid red">@kpi.General</td>
                                <td style="border:1px solid orange">@kpi.AttendancePoint</td>
                                <td style="border:1px solid orange">@kpi.Attendance</td>
                                <td style="border:1px solid green">@kpi.TotalPoint</td>
                                <td style="border:1px solid green">@kpi.Total</td>
                                <td>@kpi.Rate</td>
                                <td>@kpi.Shift</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

